<div class="content-page-admin">
  <h2 class="text-center"><%= t "admin.words.title" %></h2>
  <div class="flash-massage"></div>
  <div class="panel-group">
    <div class="panel panel-info">
      <div class="panel-heading text-center">
        <%= t "word.index.filter" %>
      </div>
      <div class="panel-body">
        <%= render "form_search" %>
      </div>
    </div>
  </div>
  <div>
  <%= link_to new_admin_word_path, class: "btn btn-info btn-add-word" do %>
    <i class="glyphicon glyphicon glyphicon-plus">
    <%= t ".new word" %></i>
  <% end %>
  </div>

  <table class="table table-bordered" id="table-words">
    <thead>
      <tr class="admin-words">
        <th class="col-id"><%= t ".number_order" %></th>
        <th class="col-content"><%= t ".content" %></th>
        <th class="col-correct"><%= t ".correct" %></th>
        <th class="col-action"><%= t ".action" %></th>
      </tr>
    </thead>
    <tbody>
      <% @words.each_with_index do |word, index| %>
        <tr id="word-<%= word.id %>">
          <td><%= index + 1 %></td>
          <td><%= word.content %></td>
          <td><%= word.answers.correct_anwser.try(:content) %></td>
          <td>
            <%= link_to edit_admin_word_path(word) do %>
              <i class="btn btn-info btn-edit-word"><%= t(".edit") %> </i>
            <% end %>
            <button class="btn btn-danger btn-delete-word"
              data-value="<%= word.id %>"><%= t(".delete") %></button>
          </td>
        </tr>
      <% end %>
    </tbody>
  </table>
  <%= will_paginate @words %>
</div>
