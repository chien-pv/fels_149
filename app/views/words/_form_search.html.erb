<%= form_tag words_path, method: :get do %>
  <div class="row">
    <div class="col-md-3">
      <%= select_tag :category_id,
        options_from_collection_for_select(@categories, :id, :name, 0),
        class: "form-control", include_blank: "All" %>
    </div>
    <div class="col-md-3">
      <div class="col-md-2">
        <%= radio_button_tag :check_learned, :learned %>
      </div>
      <label><%= t "word.index.learned" %> </label>
    </div>
    <div class="col-md-3">
      <div class="col-md-2">
        <%= radio_button_tag :check_learned, :not_learned %>
      </div>
      <label><%= t "word.index.not_learned" %></label>
    </div>
    <div class="col-md-3">
      <div class="col-md-2">
        <%= radio_button_tag :check_learned, :all %>
      </div>
      <label><%= t "word.index.all" %></label>
    </div>
  </div>
  <%= submit_tag t("word.index.search"),
    class: "btn btn-success col-md-2 col-md-offset-4" %>
<% end %>
