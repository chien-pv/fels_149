<div class="container">
  <div class="row">
    <div class="col-md-3 user-info">
      <h1><%= gravatar_for @user %></h1>
      <h1><%= @user.name %></h1>
    </div>
    <div class="col-md-9 border-left" id="user-activity">
      <div class="row">
        <div class="col-md-6">
          <%= link_to "#", class: "btn btn-info btn-lg btn-user " do %>
            <i class="glyphicon glyphicon-hand-up">
            <%= t "user.word" %></i>
          <% end %>
        </div>
        <div class="col-md-6">
          <%= link_to "#", class: "btn btn-info btn-lg btn-user " do %>
            <i class="glyphicon glyphicon-hand-up">
            <%= t "user.lesson" %></i>
          <% end %>
        </div>
      </div>
      <div class="row ">
        <div>
          <h1 class="border-bottom"><%= t "user.activity" %></h1>
        </div>
      </div>
    </div>
  </div>
</div>
